{% extends 'base.html.twig' %}

{% block title %}State index{% endblock %}

{% block body %}
    <h1>State index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td>{{ state.id }}</td>
                <td>{{ state.label }}</td>
                <td>{{ state.color }}</td>
                <td>
                    <a href="{{ path('state_show', {'id': state.id}) }}">show</a>
                    <a href="{{ path('state_edit', {'id': state.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('state_new') }}">Create new</a>
{% endblock %}
